{
  "manifest_version": 2,
  "name": "blogcat",
  "description": "An add-on to make blogging a first-class feature of Firefox",
  "version": "1.0.0",
  "icons": {
    "64": "assets/icons/icon.png"
  },
  "background": {
    "scripts": [
      "background/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.mozilla.org/*"
      ],
      "js": [
        "contentScript/content_script.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": {
      "64": "assets/icons/icon.png"
    },
    "default_popup": "browserAction/index.html",
    "default_title": "blogfox"
  },
  "page_action": {
    "browser_style": true,
    "show_matches": ["<all_urls>"],
    "default_icon": {
      "64": "assets/icons/icon.png"
    },
    "default_popup": "subscribe/index.html",
    "default_title": "Subscribe"
  },
  "options_ui": {
    "page": "options/index.html"
  },
  "permissions": [
    "<all_urls>",
    "notifications",
    "nativeMessaging",
    "tabs",
    "activeTab",
    "storage",
    "unlimitedStorage",
    "clipboardWrite",
    "clipboardRead",
    "contextMenus"
  ]
}
